{
    "manifest_version": 3,
    "name": "LinkedIn Smart Engage",
    "version": "1.0",
    "description": "LinkedIn Smart Engage",
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "content.js",
                "backgroundScript.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8000/*"
    ],
    "background": {
        "service_worker": "backgroundScript.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "ui/button.html"
            ],
            "matches": [
                "https://www.linkedin.com/*"
            ]
        }
    ]
}